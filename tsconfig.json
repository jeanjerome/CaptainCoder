{
	"extends": "ts-node/node16/tsconfig.json",
	"ts-node": {
	  "transpileOnly": true,
	  "files": true,
	  "esm": true
	},
	"compilerOptions": {
    	"module": "ESNext", // or ES2015, ES2020
		"moduleResolution": "Bundler",
		"outDir": "out",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"ES2020"
		],
		"typeRoots" : ["./node_modules/@types", "./typings"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"]
	}
}
